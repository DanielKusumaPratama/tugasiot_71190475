<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ldr"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="nilai ldr"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servo" />

    <TextView
        android:id="@+id/txtViewValueServo"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/servo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewValueLdr"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ldr"
        app:layout_constraintTop_toBottomOf="@+id/txtViewValueServo" />

    <TextView
        android:id="@+id/servo"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="84dp"
        android:text="nilai servo"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>